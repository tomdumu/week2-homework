<h1>Dice Game<h1>
<hr></hr>
<img src="http://jeffcohenonline.com/dice/<%= @first %>.png">
<img src="http://jeffcohenonline.com/dice/<%= @second %>.png">
<%
  @sum = @first.to_i + @second.to_i
  if @goal.to_i == 0
	if @sum == 7 or @sum == 11
%>
<h1>YOU WIN!<h1>
<a href="/dice">Restart</a>
<%  elsif @sum == 2 or @sum == 3 or @sum == 12 %>
<h1>YOU LOSE!<h1>
<a href="/dice">Restart</a>
<% else
	@goal = @sum
%>
<h1>Your goal is now <%= @goal %>.<h1>
<h2>Now try to get <%= @goal %> again before you roll a 7.<h2>
<a href="roll?goal=<%= @goal %>">Roll the dice</a>
<% end 
else
	if @sum == 7%>
<h1>YOU LOSE!<h1>
<a href="/dice">Restart</a>
<%
	elsif @sum.to_i == @goal.to_i %>
<h1>YOU WIN!<h1>
<a href="/dice">Restart</a>
<%
	else %>
<h1>Your goal is <%= @goal %> but you rolled <%= @sum %>. You can roll again.<h1>
<a href="roll?goal=<%= @goal %>">Roll again</a>
<%
	end
  end
	%>

